<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_title_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#391513">
    <TextView
        android:id="@+id/EndofTheGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="End Game"
        android:textColor="#D69F0B"
        android:textSize="50dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/doesPark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Does the Robot Park on the Platform?"
        android:textColor="#D69F0B"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:layout_below="@id/EndofTheGame"
 />


    <RadioGroup
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/doesPark"
        android:id="@+id/platformPark">

        <RadioButton
            android:id="@+id/yesPark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="25dp"
            android:textColor="#D69F0B" />

        <RadioButton
            android:id="@+id/noPark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="25dp"
            android:textColor="#D69F0B"
            android:layout_below="@id/yesPark"/>
    </RadioGroup>

    <TextView
        android:id="@+id/cardPenalties"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/platformPark"
        android:text="Did the Robot Recieve a Yellow or Red Card?"
        android:textSize="35dp"
        android:textColor="#D69F0B"/>

    <RadioGroup
        android:id="@+id/recieveCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardPenalties">

        <RadioButton
            android:id="@+id/noCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Card"
            android:textSize="25dp"
            android:textColor="#D69F0B"/>

        <RadioButton
            android:id="@+id/yellowCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noCard"
            android:text="Yellow card"
            android:textSize="25dp"
            android:textColor="#D69F0B"/>

        <RadioButton
            android:id="@+id/redCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yellowCard"
            android:text="Red card"
            android:textSize="25dp"
            android:textColor="#D69F0B"/>
    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post Game"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:elevation="0dp"
        android:id="@+id/Submit"
        android:textColor="#391513"
        android:background="#D69F0B"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:onClick="navigatePostGame"/>

</RelativeLayout>
