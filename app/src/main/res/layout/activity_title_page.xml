<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_title_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#391513">

    <TextView
        android:id="@+id/gameTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="FIRST Power Up"
        android:textColor="#D69F0B"
        android:textSize="50dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/Team_Number_Text"
        android:layout_width="match_parent"
        android:text="Team Number"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="40sp"
        android:gravity="left|center_vertical|center_horizontal"
        android:textColor="#D69F0B"
        android:layout_height="100dp"
        android:layout_below="@id/gameTitle"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/Team_Number"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        android:layout_below="@id/Team_Number_Text"
        android:elevation="0dp"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:textColor="#D69F0B"
        android:hint="Enter Team Number Here"
        android:textColorHint="#D69F0B"
        android:layout_height="50dp"
        android:maxLength="5"
        android:textColorLink="#D69F0B" />

    <TextView
        android:id="@+id/Team_Name_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Team Name"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="40sp"
        android:layout_below="@id/Team_Number"
        android:gravity="left|center_horizontal"
        android:textColor="#D69F0B"
        android:textColorLink="#D69F0B"
        android:textAlignment="center"/>
    <EditText
        android:id="@+id/Team_Name"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="18sp"
        android:layout_height="80dp"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="text"
        android:textColor="#D69F0B"
        android:layout_below="@+id/Team_Name_Text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Team Name Here"
        android:textColorHint="#D69F0B"
        android:textAlignment="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Begin Scouting"
        android:onClick="navigateMain"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:elevation="0dp"
        android:id="@+id/NavigAuto"
        android:textColor="#391513"
        android:background="#D69F0B"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>