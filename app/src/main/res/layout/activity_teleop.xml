<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_title_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#391513">

    <TextView
        android:id="@+id/TeleTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="TeleOp"
        android:textColor="#D69F0B"
        android:textSize="50dp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recieveExchange"
        android:layout_below="@id/TeleTime"
        android:text="Does the Robot Recieve Cubes from the Exchange?"
        android:textColor="#D69F0B"
        android:textSize="35dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/exchangeChoice"
        android:layout_below="@id/recieveExchange">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doesRecieve"
            android:text="Yes"
            android:textColor="#D69F0B"
            android:textSize="25dp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/doesntRecieve"
            android:layout_below="@id/doesRecieve"
            android:text="No"
            android:textColor="#D69F0B"
            android:textSize="25dp"/>

    </RadioGroup>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="End Game"
        android:onClick="navigateEndGame"
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:elevation="0dp"
        android:id="@+id/NavigEnd"
        android:textColor="#D69F0B"
        android:background="@drawable/button_outline"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
